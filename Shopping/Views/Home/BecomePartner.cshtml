@model Shopping.Models.Partner
@{
    ViewBag.Title = "Affinity Partnership";
    Layout = "~/Views/Shared/_TopHeaderLayout.cshtml";
}

<style>
    .text-lg {
        line-height: 5.75rem;
    }

    .btn-submit {
        padding: 5px 79px;
        margin-left: auto;
    }
    .product-page-grid {
        display: grid;
        grid-template-columns: none;
        grid-gap: 20px;
        margin-top: 50px;
    }

</style>

<div class="breadcrumbTwo" role="navigation">BECOME A PARTNER</div>
<div id="content-box" class="content">

    <main class="nw">
        <div class="flex flex-col xl:flex-col ">
            <h1 class="text-2.5xl text-sir-green-dark font-normal !mb-3 ">Become a Partner</h1>

            <p>Society of Interventional Radiology (SIR) is committed to working with companies to provide our members with benefits that improve productivity, reduce operational costs, and increase the value of membership.<br><br></p>

            <p>Our primary focus when working with partners is to ensure that members benefit from excellent service, outstanding products, and pricing.  We work closely with all our partners to understand their brand and business objectives and ensure that members are aware of the services offered.<br><br></p>

            <p>If you are interested in working with SIR as an affinity partner, please contact</p>

            @using (Html.BeginForm("BecomePartner", "Home", FormMethod.Post, new { @class = "mt-[30px]" }))
            {
                <div class="flex flex-col gap-5">
                    <div class="flex flex-col">
                        @Html.LabelFor(x => x.OrganizationName, "Organization Name", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                        @Html.TextBoxFor(x => x.OrganizationName, "FPO Organization", new { @class = "textborder outline-none placeholder:text-sir-black text-lg px-5 h-12" })

                    </div>
                    <div class="flex flex-col">
                        @Html.LabelFor(x => x.Title, "Title", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                        @Html.TextBoxFor(x => x.Title, "FPO Title", new { @class = "textborder outline-none placeholder:text-sir-black text-lg px-5 h-12" })

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="flex flex-col flex-1">
                                @Html.LabelFor(x => x.FirstName, "First Name", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                                @Html.TextBoxFor(x => x.FirstName, "First Name", new
                                {
                                    @class = "textborder outline-none placeholder:text-sir-black text-lg px-5 h-12" 
                           })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="flex flex-col">
                                @Html.LabelFor(x => x.LastName, "Last Name", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                                @Html.TextBoxFor(x => x.LastName, "Last Name", new { @class = "textborder outline-none placeholder:text-sir-black text-lg px-5 h-12 " })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="flex flex-col">
                                @Html.LabelFor(x => x.Email, "Email", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                                @Html.TextBoxFor(x => x.Email, "fpo-email@FPO.com", new { @class = "textborder outline-none placeholder:text-sir-black text-lg px-5 h-12 " })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="flex flex-col">
                                @Html.LabelFor(x => x.PhoneNumber, "Phone Number", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                                @Html.TextBoxFor(x => x.PhoneNumber, "(XXX) XXX-XXXX", new { @class = "textborder outline-none placeholder:text-sir-black text-lg px-5 h-12 " })

                            </div>
                        </div>
                    </div>


                    <div class="flex flex-col">
                        @Html.LabelFor(x => x.Message, "Message", new { @class = "text-1.5xl text-sir-green-dark mb-1" })
                        @Html.TextAreaFor(x => x.Message, new { @class = "outline-none placeholder:text-sir-black text-lg px-5 h-[400px] border border-sir-green-dark" })
                    </div>

                    <div>

                        <input type="submit" class="btn-submit tmx-2 flex-1 text-[19px] uppercase h-[68px] btn-primary text-white border-0 flex items-center justify-center cursor-pointer px-10 py-3" value="Submit" />
                    </div>

                </div>
            }
        </div>
    </main>

</div>




